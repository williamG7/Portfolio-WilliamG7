---
import GithubIcon from "./icons/Github.astro";
import LinkedInIcon from "./icons/Linkedin.astro";
import GmailIcon from "./icons/Gmail.astro";

const CONTACT_INFO = [
	{
		icon: GithubIcon,
		label: "GitHub",
		username: "@williamG7",
		link: "https://github.com/williamG7",
	},
	{
		icon: LinkedInIcon,
		label: "LinkedIn",
		username: "William Guzm√°n",
		link: "https://linkedin.com/in/WilliamG7",
	},
	{
		icon: GmailIcon,
		label: "Email",
		username: "WilliamG7@gmail.com",
		link: "mailto:WilliamG7@gmail.com",
	},
];
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
	{
		CONTACT_INFO.map(({ icon: Icon, label, username, link }) => (
			<a
				href={link}
				target="_blank"
				rel="noopener noreferrer"
				class="flex flex-col p-6 rounded-lg border border-white/10 bg-white/5 hover:bg-white/10 hover:border-white/20 transition-all duration-300 hover:scale-105"
			>
				<div class="flex items-center gap-3 mb-3">
					<Icon class="size-7 md:size-8 text-sky-400 shrink-0" />
					<span class="text-lg md:text-xl text-white font-semibold">
						{label}
					</span>
				</div>
				<p class="text-sm md:text-base text-gray-300 break-words">
					{username}
				</p>
			</a>
		))
	}
</div>
