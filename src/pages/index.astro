---
import Layout from "../layouts/Layout.astro";
import GithubIcon from "../components/icons/Github.astro";
import GmailIcon from "../components/icons/Gmail.astro";
import LinkedInIcon from "../components/icons/Linkedin.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import User from "../components/icons/User.astro";
import Send from "../components/icons/Send.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
import Contact from "../components/Contact.astro";
---

<Layout
	title="Portfolio de William Guzmán - Desarrollador de aplicaciones Multiplataforma y Web"
	description="Portfolio de William Guzmán, desarrollador de aplicaciones multiplataforma y programador web de Barcelona, España."
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
			<div
				class="flex flex-col md:flex-row gap-6 md:gap-8 items-center md:items-start"
			>
				<img
					class="rounded-full size-36 md:size-48 lg:size-56 shrink-0 ring-2 ring-sky-500/50 hover:ring-sky-400/70 transition-all duration-300 hover:scale-105"
					src="/img/fotoCurriculum.png"
					alt="imagen william logo"
				/>
				<div class="flex flex-col">
					<h1
						class="text-sky-400 text-3xl md:text-4xl lg:text-5xl font-bold
						pb-4 lg:pb-6 flex items-center justify-center"
					>
						William Guzmán
					</h1>
					<h2 class="text-lg lg:text-xl text-wrap max-w-[700px] text-center md:text-center">
						Desarrollador de aplicaciones multiplataforma y web, de
						Barcelona, España. Especializado en desarrollar
						soluciones.
					</h2>
					<nav
						class="flex gap-4 mt-8 flex-nowrap justify-center"
					>
					<SocialPill href="https://github.com/williamG7">
						<GithubIcon class="size-4 md:size-6" />
						Github
					</SocialPill>
						<SocialPill href="https://www.linkedin.com/in/williamg7/">
							<LinkedInIcon class="size-4 md:size-6" />
							Linkedin
						</SocialPill>
					<SocialPill href="mailto:williamg7.dev@gmail.com">
						<GmailIcon class="size-4 md:size-6" />
						williamg7.dev@gmail.com
					</SocialPill>
					</nav>

					<div class="flex justify-center mt-6">
						<a
							href="mailto:williamg7.dev@gmail.com"
							class="inline-flex items-center gap-2 bg-sky-500/20 hover:bg-sky-500/30 text-sky-400 text-base md:text-lg font-semibold px-4 py-2 md:px-6 md:py-3 rounded-lg border border-sky-500/30 transition-colors"
						>
							Contactar
						</a>
					</div>
				</div>
			</div>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2
				class="text-3xl font-semibold mb-8 mb flex gap-x-3 items-center"
			>
				<Briefcase class="size-7" />
				Formación
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos" class="lg:w-[900px]!">
			<h2
				class="text-3xl font-semibold mb-8 mb flex gap-x-3 items-center"
			>
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="sobreMi">
			<h2 class="text-3xl font-semibold mb-8 flex gap-x-3 items-center">
				<User class="size-7" />
				Sobre Mí
			</h2>
			<AboutMe />
		</SectionContainer>

		<SectionContainer id="contacto">
			<h2 class="text-3xl font-semibold mb-8 flex gap-x-3 items-center">
				<Send class="size-7" />
				Contacto
			</h2>
			<Contact />
		</SectionContainer>
	</main>
</Layout>
